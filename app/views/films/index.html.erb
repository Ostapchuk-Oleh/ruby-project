<p style="color: green"><%= notice %></p>

<h1>Films</h1>

<div id="films">
  <% @films.each do |film| %>
    <%= render film %>
    <p>
      <%= link_to "Show this film", film %>
    </p>
  <% end %>
</div>

<%= link_to "New film", new_film_path %>

<div> 
  <% if current_user.blank? %> 
    <%= link_to 'Log in', new_user_session_path  %> 
  <% else %> 
    <%= link_to "Log out", destroy_user_session_path,data: {"turbo-method": :delete}, class: "link-secondary smooth" %> 
  <% end %> 
</div>